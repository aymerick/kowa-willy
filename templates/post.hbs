{{> jumbotron}}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <article>
                <header class="post-header">
                    <h1>{{title}}</h1>
                    <p class="date">{{date}}</p>
                </header>

                {{#if cover}}
                    <section class="post-cover">
                        <img src="{{cover.small}}" class="cover img-thumbnail" alt="{{t "cover"}}" />
                    </section>
                {{/if}}

                <section class="post-body">
                    {{body}}
                </section>

                <section class="post-footer">
                    <ul class="nav nav-pills pull-left">
                        <li>
                            <a href="{{urlFor "posts"}}"><i class="fa fa-arrow-left"></i> {{t "back_to_posts"}}</a>
                        </li>
                    </ul>
                </section>
            </article>
        </div>
    </div>
</div>
